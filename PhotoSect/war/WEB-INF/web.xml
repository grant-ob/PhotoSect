<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.2//EN"
    "http://java.sun.com/j2ee/dtds/web-app_2_2.dtd">

<web-app>
  <servlet>
        <servlet-name>fileupload</servlet-name>
        <servlet-class>FileUpload</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>fileupload</servlet-name>
        <url-pattern>/servlet/fileupload</url-pattern>
    </servlet-mapping> 
	<servlet>
      <servlet-name>newImages</servlet-name>
      <servlet-class>NewImagesServlet</servlet-class>
  </servlet>
  <servlet-mapping>
      <servlet-name>newImages</servlet-name>
      <url-pattern>/servlet/new-images/*</url-pattern>
  </servlet-mapping>
	<servlet>
      <servlet-name>childNode</servlet-name>
      <servlet-class>GetChildNodeValue</servlet-class>
  </servlet>
  <servlet-mapping>
      <servlet-name>childNode</servlet-name>
      <url-pattern>/servlet/child/*</url-pattern>
  </servlet-mapping>
	<servlet>
      <servlet-name>childNodeNames</servlet-name>
      <servlet-class>GetAllChildNodeNames</servlet-class>
  </servlet>
  <servlet-mapping>
      <servlet-name>childNodeNames</servlet-name>
      <url-pattern>/servlet/child-names/*</url-pattern>
  </servlet-mapping>
  	<servlet>
      <servlet-name>addChildNode</servlet-name>
      <servlet-class>AddChildNode</servlet-class>
  </servlet>
  <servlet-mapping>
      <servlet-name>addChildNode</servlet-name>
      <url-pattern>/servlet/addChild/*</url-pattern>
  </servlet-mapping>
  	<servlet>
      <servlet-name>commentCountSort</servlet-name>
      <servlet-class>SortOnCommentCount</servlet-class>
  </servlet>
  <servlet-mapping>
      <servlet-name>commentCountSort</servlet-name>
      <url-pattern>/servlet/comment-count/*</url-pattern>
  </servlet-mapping>
  	<servlet>
      <servlet-name>viewCountSort</servlet-name>
      <servlet-class>SortOnViewCount</servlet-class>
  </servlet>
  <servlet-mapping>
      <servlet-name>viewCountSort</servlet-name>
      <url-pattern>/servlet/view-count/*</url-pattern>
  </servlet-mapping>
  <servlet>
      <servlet-name>deletionServlet</servlet-name>
      <servlet-class>DeletionServlet</servlet-class>
  </servlet>
  <servlet-mapping>
      <servlet-name>deletionServlet</servlet-name>
      <url-pattern>/servlet/delete/*</url-pattern>
  </servlet-mapping>
 
    <filter>
        <filter-name>fileuploadfilter</filter-name>
        <filter-class>org.mortbay.servlet.MultiPartFilter</filter-class>
        <init-param>
            <param-name>deleteFiles</param-name>
            <param-value>true</param-value>
        </init-param>
    </filter>
 
    <filter-mapping>
        <filter-name>fileuploadfilter</filter-name>
        <url-pattern>/servlet/fileupload</url-pattern>
    </filter-mapping>
</web-app>
